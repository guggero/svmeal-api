<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>svmeal-api</display-name>

    <servlet>
        <servlet-name>svmeal-endpoint</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>io.swagger.jaxrs.listing,nu.peg.svmeal.endpoint,nu.peg.svmeal.filter</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>svmeal-endpoint</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <!--suppress ServletWithoutMappingInspection -->
        <servlet-name>SwaggerConfig</servlet-name>
        <servlet-class>io.swagger.jersey.config.JerseyJaxrsConfig</servlet-class>
        <init-param>
            <param-name>api.version</param-name>
            <param-value>1.0.3</param-value>
        </init-param>
        <init-param>
            <param-name>swagger.api.basepath</param-name>
            <param-value>https://svmeal-api.jmnw.me/</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <!-- App Initializer -->
    <listener>
        <listener-class>nu.peg.svmeal.AppInitializer</listener-class>
    </listener>

